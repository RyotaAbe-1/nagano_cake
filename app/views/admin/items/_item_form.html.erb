<%= form_with model: [:admin, item], local: true do |f| %>
  <table class="table-height mx-auto">
    <tr>
      <td>商品画像</td>
      <td><%= f.attachment_field :image %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name, class: "w-100" %></td>
    </tr>
    <tr>
      <td class="align-top">商品説明</td>
      <td><%= f.text_area :introduction, rows: "5", class: "w-100" %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= f.collection_select(:genre_id, genre, :id, :name, {prompt: "--選択してください--"}, {class: "w-100"}) %></td>
    </tr>
    <tr>
      <td>税抜価格</td>
      <td><%= f.number_field :price, class: "w-100" %></td>
      <td>円</td>
    </tr>
    <tr>
      <td class="pr-3">販売ステータス</td>
      <td>
        <%= f.radio_button :is_active, true, checked: true %>販売中
        <%= f.radio_button :is_active, false %>販売停止中
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <% if edit_frag == true %>
          <div class="text-center">
            <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
          </div>
        <% else %>
          <div class="text-center">
            <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>

