<div class="container mt-3">
  <div class="mx-auto pt-4 position-relative w-75">
    <p class="title">商品新規登録</p>


      <%= form_with model: [:admin, @item], local: true do |f| %>
        <div class="col-md-7 mx-auto">
          <div class="form-group row">
            <p class="col-4 col-form-label">商品画像</p>
            <%= f.attachment_field :image, class: "col-7 form-control-file form-control-sm" %>
          </div>
    
          <div class="form-group row">
            <p class="col-4 col-form-label">商品名</p>
            <%= f.text_field :name, class: "col-7 form-control form-control-sm" %>
          </div>
    
          <div class="form-group row">
            <p class="col-4 col-form-label">商品説明</p>
            <%= f.text_area :introduction, class: "col-7 form-control form-control-sm" %>
          </div>
    
          <div class="input-group form-group row">
            <p class="col-4 col-form-label">ジャンル</p>
          　<%= f.collection_select(:genre_id, @genre, :id, :name, {prompt: "--選択してください--"}, {class: "col-7 custom-select custom-select-sm"}) %>
          </div>
    
          <div class="form-group row">
            <p class="col-4 col-form-label">税抜価格</p>
            <%= f.number_field :price, class: "col-7 form-control form-control-sm" %>円
          </div>
    
          <div class="form-group row">
            <p class="col-4">販売ステータス</p>
            <div class="col-8 form-check">
              <%= f.radio_button :is_active, true, checked: true, class: "form-check-input" %>販売中
            　<%= f.radio_button :is_active, false, class: "form-check-input" %>販売停止中
          　</div>
          </div>
          
          <div class="text-center">
            <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
          </div>
          
        </div>
      <% end %>


  </div>

</div>