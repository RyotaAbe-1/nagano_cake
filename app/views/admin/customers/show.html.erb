<div class="container">
  <div class="col-md-10 mx-auto pt-4">
    <p class="title"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</p>
  </div>

  <table class="customer-show-table w-50">
    <tbody class="table-height">
      <tr>
        <td>会員ID</td>
        <td>
          <%= @customer.id %>
        </td>
        <td></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td>
          <%= @customer.last_name %> <%= @customer.first_name %>
        </td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>
          <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td>
          <%= @customer.postal_code %>
        </td>
      </tr>
      <tr>
        <td>住所</td>
        <td colspan="2">
          <%= @customer.address %>
        </td>

      </tr>
      <tr>
        <td>電話番号</td>
        <td>
          <%= @customer.telephone_number %>
        </td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td colspan="2">
          <%= @customer.email %>
        </td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <% if @customer.is_active == true %>
          <td class="text-success font-weight-bold">有効</td>
        <% else %>
          <td>退会</td>
        <% end %>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success btn-sm px-4" %>
        </td>
        <td>
          <%= link_to "注文履歴一覧を見る", {controller: "admin/homes", action: "top", id: @customer.id}, class: "btn btn-primary btn-sm px-4" %>
        </td>
      </tr>
    </tbody>
  </table>

</div>