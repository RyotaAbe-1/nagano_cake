<div class="container">
  <div class="col-md-10 mx-auto pt-4">
    <p class="title"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</p>
  </div>
  
  <div class="d-flex mx-auto w-75 mt-5">
    <div class="mr-5">
    </div>

    <div  class="w-50">
      <table>
        <thead>
          <tr>
            <th class="col-4"></th>
            <th class="col-7"></th>
          </tr>
        </thead>
        <tbody class="table-height">
          <tr>
            <td>会員ID</td>
            <td>
              <%= @customer.id %>
            </td>
          </tr>
          <tr>
            <td>氏名</td>
            <td>
              <%= @customer.last_name %> <%= @customer.first_name %>
            </td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>
              <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td>
              <%= @customer.postal_code %>
            </td>
          </tr>
          <tr>
            <td>住所</td>
            <td>
              <%= @customer.address %>
            </td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td>
              <%= @customer.telephone_number %>
            </td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td>
              <%= @customer.email %>
            </td>
          </tr>
          <tr>
          <td>販売ステータス</td>
          <% if @customer.is_active == true %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td>退会</td>
          <% end %>
          </tr>
        </tbody>
      </table>
      
      <div class="text-center mt-4">
        <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success btn-lg px-4 text-white text-decoration-none" %>
      </div>
      
      <div class="text-center mt-4">
        <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-success btn-lg px-4 text-white text-decoration-none" %>
      </div>
      
    </div>
  </div>

</div>