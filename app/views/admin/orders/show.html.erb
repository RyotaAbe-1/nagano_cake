<div class="container mt-3">
  <div class="col-md-10 mx-auto pt-4">
    <p class="title">注文履歴詳細</p>
    
    <table>
      <thead>
        <tr>
          <th class="col-2"></th>
          <th class="col-10"></th>
        </tr>
      </thead>
      <tbody class="table-height">
        <tr>
          <td>購入者</td>
          <td>
            <%= @order.customer.name %>
          </td>
        </tr>
        <tr>
          <td>注文日</td>
          <td>
            <%= @order.create_at %>
          </td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            <%= @order.postal_code %><%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td>
            <%= @order.payment_method %>
          </td>
        </tr>
       
        <tr>
          <td>注文ステータス</td>
          <td></td>
        </tr>
      </tbody>
    </table>
    
    
    <table class="border-top w-75 mt-3 mx-auto">
      <thead class="table-title table-height">
        <tr class="border-bottom">
          <th class="pl-2">商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </tr>
      </thead>
      <tbody class="table-height">
        <% @order.order_details.each do |order_detail| %>
          <tr class="border-bottom">
            <td class="pl-2">
              <%= order_detail.item.name %>
            </td>
            <td>
              <%= order_detail.price %>
            </td>
            <td>
              <%= order_detail.amount %>
            </td>
            <td>
              <%= (order_detail.price * order_detail.amount).floor.to_s(:delimited) %>
            </td>
            <td>
              まだ
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <div>
      まだ
    </div>

    
  </div>

</div>