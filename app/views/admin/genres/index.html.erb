<div class="container">
  <div class="col-md-10 pt-4">
    <p class="title mb-5">ジャンル一覧・追加</p>

    <%= render "genres_form", genre: @genre, edit_frag: false %>

    <div class="w-75 mt-5">
      <div class="table-title w-50 border-top border-bottom px-5 py-2">
        ジャンル
      </div>
      <div class="w-50">
        <% @genres.each do |genre| %>
            <div class="border-bottom py-2 px-2 d-flex justify-content-between">
              <%= genre.name %>

              <%= link_to "編集する",  edit_admin_genre_path(genre), class: "btn btn-success btn-sm"%>
            </div>
        <% end %>
      </div>
    </div>

  </div>
</div>