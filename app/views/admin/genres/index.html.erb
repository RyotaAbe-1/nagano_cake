<div class="container">
  <div class="col-md-10 pt-4">
    <p class="title mb-5">ジャンル一覧・追加</p>

    <%= form_with model:[:admin, @genre], local: true do |f| %>
      <div class="w-50">
        <div class="form-group row">
          <label class="col-3 form-label">ジャンル</label>
          <%= f.text_field :name, class: "col-5 form-control form-control-sm" %>
          <%= f.submit "新規登録", class: "col-3 ml-auto btn btn-success" %>
        </div>
      </div>
    <% end %>
    <div class="w-75">
      <div class="table-title w-50 border-top border-bottom px-5 py-2">
        ジャンル
      </div>
      <div class="w-50">
        <% @genres.each do |genre| %>
            <div class="border-bottom py-2 px-2 d-flex justify-content-between">
              <%= genre.name %>

              <%= link_to "編集する",  edit_admin_genre_path(genre), class: "btn btn-success btn-sm"%>
            </div>
        <% end %>
      </div>
    </div>




  </div>
</div>