<div class="container mt-3">
  <div class="col-md-10 mx-auto py-4">
    <p class="title">配送先登録/一覧</p>
  </div>

  <%= render "address_form", address: @address, edit_frag: false %>

  <table class="address-table mt-5" border="1">
    <thead>
      <tr class="table-title">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success btn-sm ml-3 mr-2" %>
            <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger btn-sm mr-3" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>