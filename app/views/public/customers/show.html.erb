<div class="container mt-3">
  <div class="col-md-10 mx-auto pt-4">
    <p class="title">マイページ</p>
  </div>
  <div>
    <div class="d-flex align-items-center mt-3">
      <strong class="mr-4">
        登録情報
      </strong>
      <%= link_to "編集する", edit_customers_path, class: "btn btn-success btn-sm px-3" %>
    </div>

    <table class="customer-table w-50 mt-3" border="1">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>

    <div class="d-flex align-items-center mt-4">
      <strong class="mr-3">
        配送先&emsp;
      </strong>
      <%= link_to "一覧を見る", address_index_path, class: "btn btn-primary btn-sm px-4" %>
    </div>

    <div class="d-flex align-items-center mt-4">
      <strong class="mr-3">
        注文履歴
      </strong>
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm px-4" %>
    </div>

  </div>
</div>