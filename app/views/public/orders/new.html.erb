<div class="container mt-3">
  <div class="col-md-10 mx-auto pt-4">
    <p class="title">
      注文情報入力
    </p>
  </div>

  <div>
    <div class="h4">
      <strong>支払方法</strong>
    </div>

    <%= form_with model: @order, url: {controller: "public/orders", action: "confirm"}, local: true do |f| %>
    <div class="ml-5">
      <div>
        <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>クレジットカード
      </div>
      <div>
        <%= f.radio_button :payment_method, :銀行振込 %>銀行振込
      </div>
    </div>

    <div class="h4 mt-4">
      <strong>お届け先</strong>
    </div>

      <div>
        <div>
          <div>
            <input type="radio" name="info" value="1" checked>ご自身の住所
          </div>
          <%= "〒#{current_customer.postal_code + current_customer.address}" %>
          <%= current_customer.last_name + current_customer.first_name %>
        </div>

        <div>
          <div>
            <input type="radio" name="info" value="2" >登録済住所から選択
          </div>
          <div>
            <select name="select_info">
            <% @addresses.each do |address| %>
            <option value=address.id><%= address.postal_code %></option>
            <% end %>
            </select>
          </div>
        </div>

        <div>
          <div>
            <input type="radio" name="info" value="3" >新しいお届け先
          </div>
          <label for="postal_code">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, id: "postal_code" %>
          <label for="address">住所</label>
          <%= f.text_field :address, id: "address" %>
          <label for="name">宛名</label>
          <%= f.text_field :name, id: "name" %>
        </div>
      </div>


      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    <% end %>

  </div>

</div>