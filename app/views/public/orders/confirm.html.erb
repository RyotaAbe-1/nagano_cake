<div class="container mt-3">
  <div class="col-md-10 mx-auto">
    <p class="title">注文情報確認</p>
  </div>

  <div class="d-flex">
    <table class="cart-table order-table" border="1">
      <thead class="table-title">
        <tr>
          <th class="order-table1">商品名</th>
          <th class="order-table2">単価(税込)</th>
          <th class="order-table2">数量</th>
          <th class="order-table2">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.item, :image, :fill, 65, 45 %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.include_tax(1.1).floor.to_s(:delimited) %>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= (cart_item.include_tax(1.1).floor * cart_item.amount).to_s(:delimited) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <table class="cart-table total-table ml-5" border="1">
      <tbody>
        <tr>
          <td class="table-title total-table1">
            送料
          </td>
          <td class="total-table1">
            <%= @order.shipping_fee %>
          </td>
        </tr>
        <tr>
          <td class="table-title">
            商品合計
          </td>
          <td>
            <% array_total = [] %>
            <% @cart_items.each do |cart_item| %>
              <% array_total.push(cart_item.include_tax(1.1).floor * cart_item.amount) %>
            <% end %>
            <%= array_total.sum.to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <td class="table-title">
            請求金額
          </td>
          <td>
            <%= (@order.total_payment).to_s(:delimited) %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div>
    <div class="mt-4">
      <strong class="h5 mr-2">支払方法</strong>
      <span>
        <%= @order.payment_method %>
      </span>
    </div>
    <div class="d-flex mt-4">
      <strong class="h5 mr-2">お届け先</strong>
      <div>
        <%= "〒#{@order.postal_code} #{@order.address}" %><br>
        <%= @order.name %>
      </div>
    </div>
  </div>

  <div class="mt-5 text-center">
    <%= form_with model: @order, local: true do |f| %>
      <%= f.hidden_field :postal_code, value: @order.postal_code %>
      <%= f.hidden_field :address, value: @order.address %>
      <%= f.hidden_field :name, value: @order.name %>
      <%= f.submit "注文を確定する", class: "btn btn-success px-4" %>
    <% end %>
  </div>



</div>