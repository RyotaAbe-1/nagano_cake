<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="border border-dark">
    <header class="border-bottom border-dark">

      <div class="d-flex justify-content-between align-items-center mx-5">
        <h1 class="border border-dark px-5 py-2 mt-5 mb-4">
          LOGO
        </h1>
        <div class="d-flex">
          <% if admin_signed_in? %>
            <p class="btn btn-outline-secondary btn-sm ml-4">
              <%= link_to "商品一覧", admin_items_path, class: "text-dark" %>
            </p>
            <p class="btn btn-outline-secondary btn-sm ml-4">
              <%= link_to "会員一覧", admin_customers_path, class: "text-dark" %>
            </p>
            <p class="btn btn-outline-secondary btn-sm ml-4">
              <%= link_to "注文履歴一覧", admin_root_path, class: "text-dark" %>
            </p>
            <p class="btn btn-outline-secondary btn-sm ml-4">
              <%= link_to "ジャンル一覧", admin_genres_path, class: "text-dark" %>
            </p>
            <p class="btn btn-outline-secondary btn-sm ml-4">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "text-dark" %>
            </p>
          <% elsif customer_signed_in? %>

          <% else %>
            <p class="btn btn-outline-secondary ml-4">
              <%= link_to "新規登録", new_admin_registration_path, class: "text-dark" %>
            </p>
            <p class="btn btn-outline-secondary ml-4">
              <%= link_to "ログイン", new_admin_session_path, class: "text-dark" %>
            </p>
          <% end %>
        </div>
      </div>

    </header>

    <%= yield %>

    <footer class="border-top border-dark">

    </footer>
  </body>
</html>
